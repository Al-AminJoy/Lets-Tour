<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen2dp"
    app:cardElevation="@dimen/dimen2dp"
    app:cardBackgroundColor="@color/basicColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding8dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_req_lay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="60"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_req_lay_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saint Martins"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeXL"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/padding4dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/margin8dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_req_lay_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Md.Al-Amin"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeM"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/padding4dp"
                />
            <TextView
                android:id="@+id/tv_req_lay_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone : 0174941185"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeM"
                android:padding="@dimen/padding4dp"
                />
            <TextView
                android:id="@+id/tv_req_lay_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alaminislam3555@gmail.com"
                android:gravity="center"

                android:textColor="@color/white"
                android:textSize="@dimen/textSizeM"
                android:padding="@dimen/padding4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_req_lay_approve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/margin4dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin2dp"
                android:layout_marginRight="@dimen/margin2dp"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding8dp"
                app:rippleColor="@color/black"
                android:text="APPROVE"
                android:backgroundTint="@color/secondary"
                app:strokeColor="@color/white"
                app:strokeWidth="@dimen/margin2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeM"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_req_lay_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/margin4dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin2dp"
                android:layout_marginRight="@dimen/margin2dp"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding8dp"
                app:rippleColor="@color/black"
                android:text="REMOVE"
                android:backgroundTint="@color/red"
                app:strokeColor="@color/white"
                app:strokeWidth="@dimen/margin2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeM"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>