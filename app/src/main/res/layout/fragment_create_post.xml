<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:padding="@dimen/padding10dp"
    tools:context=".fragment.CreatePostFragment">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen2dp"
    app:cardElevation="@dimen/dimen2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen8dp"
        android:background="@color/basicColor"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:text="Location : "
                android:gravity="right"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_create_post_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:inputType="text"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:text="Person : "
                android:gravity="right"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_create_post_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:inputType="number"
                android:digits="0123456789"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:text="Cost : "
                android:gravity="right"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_create_post_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:inputType="number"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:digits="0123456789"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:text="Bordering :  "
                android:gravity="right"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_create_post_bordering"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:inputType="text"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeM"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:text="Select Date :  "
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:id="@+id/lin_lay_create_post_date"
                android:layout_width="0dp"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textSizeM"/>
                <TextView
                    android:id="@+id/tv_create_post_date_shower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeM"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_margin="@dimen/margin8dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:text="Description :  "
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/padding8dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8dp"
            android:layout_marginRight="@dimen/dimen16dp"
            android:layout_marginStart="@dimen/dimen16dp"
            android:padding="@dimen/padding8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_create_post_description"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:lines="10"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/black"
                android:layout_marginTop="@dimen/margin8dp"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_create_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:cornerRadius="@dimen/margin4dp"
            android:layout_margin="@dimen/margin4dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin18dp"
            android:padding="@dimen/padding14dp"
            app:rippleColor="@color/black"
            android:text="Post"
            android:backgroundTint="@color/basicColor"
            app:strokeColor="@color/white"
            app:strokeWidth="@dimen/margin2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeM"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>


</ScrollView>