<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/basicColor"
    tools:context=".activity.UserSignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <EditText
                android:id="@+id/et_user_SignUp_first_Name"
                android:layout_margin="@dimen/margin2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:hint="First Name"
                android:inputType="text" />
            <EditText
                android:id="@+id/et_user_SignUp_last_name"
                android:layout_margin="@dimen/margin2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:hint="Last Name"
                android:inputType="text" />
            <EditText
                android:id="@+id/et_user_SignUp_address"
                android:layout_margin="@dimen/margin2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:hint="Address"
                android:inputType="text"
                />

            <RadioGroup
                android:id="@+id/rg_signUp_user"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp">

                <RadioButton
                    android:id="@+id/rb_signUp_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin8dp"
                    android:text="Male"
                    android:textColor="#000"
                    android:textSize="@dimen/textSizeM"
                    android:textStyle="bold"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rb_signUp_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#000"
                    android:layout_margin="@dimen/margin8dp"
                    android:textSize="@dimen/textSizeM"
                    android:textStyle="bold"

                    />
                <RadioButton
                    android:id="@+id/rb_signUp_others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin8dp"
                    android:text="Others"
                    android:textColor="#000"
                    android:textSize="@dimen/textSizeM"
                    android:textStyle="bold"
                    />
            </RadioGroup>
            <EditText
                android:id="@+id/et_user_SignUp_Pri_Number"
                android:layout_margin="@dimen/margin2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeM"
                android:hint="Primary Number"
                android:inputType="number"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:digits="0123456789"/>

            <EditText
                android:id="@+id/et_user_SignUp_Num1"
                android:layout_margin="@dimen/margin2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number 1 (Optional)"
                android:textSize="@dimen/textSizeM"
                android:inputType="number"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:digits="0123456789" />
            <EditText
                android:id="@+id/et_user_SignUp_Num2"
                android:layout_margin="@dimen/margin2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number 2 (Optional)"
                android:textSize="@dimen/textSizeM"
                android:inputType="number"
                android:padding="@dimen/padding12dp"
                android:background="@drawable/edit_text_border"
                android:digits="0123456789" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_user_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="@dimen/textSizeM"
                android:background="@color/white"
                android:layout_gravity="end"
                app:cornerRadius="@dimen/dimen8dp"
                app:rippleColor="@color/basicLighter"
                android:text="Sign Up" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>