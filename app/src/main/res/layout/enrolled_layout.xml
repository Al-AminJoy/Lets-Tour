<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding8dp"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/gl_center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_constraintGuide_percent=".60"
    android:orientation="vertical"/>
    <TextView
        android:id="@+id/tv_enrolled_lay_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_center"
        android:textColor="@color/black"
        android:text="Al-Amin islam Joy"
        android:gravity="start"
        android:textSize="@dimen/textSizeM"/>
    <TextView
        android:id="@+id/tv_enrolled_lay_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/gl_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_enrolled_lay_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_enrolled_lay_name"
        android:textColor="@color/black"
        android:text="-01749411185"
        android:gravity="start"
        android:textSize="@dimen/textSizeM"/>

</androidx.constraintlayout.widget.ConstraintLayout>